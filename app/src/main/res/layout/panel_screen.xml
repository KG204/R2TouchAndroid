        <ImageView
            android:id="@+id/panel7_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel7_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel8_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel8_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel9_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel9_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel10_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel10_light"
            android:visibility="invisible" />
    </FrameLayout>

