            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel3_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel4_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel4_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel5_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel5_light"
