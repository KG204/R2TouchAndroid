            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel1_light"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/panel2_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/panel2_light"
            android:visibility="invisible" />

